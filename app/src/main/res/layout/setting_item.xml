<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/chatItem_imageview"
        android:src="@drawable/emo_account"/>

    <TextView
        android:id="@+id/chatItem_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chatItem_imageview"
        android:layout_toRightOf="@+id/chatItem_imageview"
        android:text="my_name"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/chatItem_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/chatItem_imageview"
        android:layout_below="@+id/chatItem_textview"
        android:layout_marginTop="5dp"
        android:text="telephone number"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/chatItem_textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/chatItem_imageview"
        android:layout_marginRight="10dp"
        android:text="프로필 관리"/>

</RelativeLayout>